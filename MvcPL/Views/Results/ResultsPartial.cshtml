@model IEnumerable<MvcPL.Models.ResultViewModel>

@{
    //int count = ViewBag.NumOfPage * 10 + 1;
    int numOfPage = ViewBag.NumOfPage + 1;
    String adminName = System.Configuration.ConfigurationManager.AppSettings["AdminRoleName"];
}

<legend>Result list, page @numOfPage</legend>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AthleteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionProgram)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AthleteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetitionTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetitionProgram)
                </td>
                @if (User.IsInRole(adminName))
                {
                    <td>
                        @Html.ActionLink("Edit", "EditResult", new { index = item.Id }) ||
                        @Html.ActionLink("Delete", "DeleteResult", new { index = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@Ajax.ActionLink("Previous", "ResultsListPartial", "Results", new { pageNum = ViewBag.NumOfPage - 1 },
                                    new AjaxOptions { UpdateTargetId = "resultsList" }, new { @class = "btn btn-default" })
@Ajax.ActionLink("Next", "ResultsListPartial", "Results",
                                        new { pageNum = ViewBag.NumOfPage + 1 },
                                new AjaxOptions { UpdateTargetId = "resultsList" }, new { @class = "btn btn-default" })