@model MvcPL.Models.ResultsAddModel

@{
    ViewBag.Title = "AddResult";
}

<legend>AddResult</legend>


@using (Html.BeginForm(new {
                                resultId = ViewBag.ResultId,
                                athleteId = ViewBag.AthleteId,
                                competitionId = ViewBag.CompetitionId
                            }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.AthleteName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AthleteName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.HorseName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HorseName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Place)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Place)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Points)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Points)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CompetitionTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompetitionTitle)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CompetitionProgram)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompetitionProgram)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DateBegin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateBegin)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DateEnd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateEnd)
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
            @Html.ActionLink("Cancel", "ResultList", "Home", null, new { @class = "btn btn-default" })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
