@model IEnumerable<MvcPL.Models.AthleteViewModel>

@{
    ViewBag.Title = "Athlete top";
    int count = 1;
    String adminName = System.Configuration.ConfigurationManager.AppSettings["AdminRoleName"];
}

<div id="athleteResult"></div>

<legend>Athlete top</legend>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                Place
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AthleteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @count
                    @{count = count + 1;}
                </td>
                <td>
                    @Ajax.ActionLink(item.AthleteName, "AthleteResultsPartial", new { athleteKey = item.Id },
                            new AjaxOptions
                            {
                                OnSuccess = "OnSuccess",
                            })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HorseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
            </tr>
        }
    <tbody>
</table>

@section scripts
{
    <script>
        function OnSuccess(data) {
            var results = $('#athleteResult'); // получаем нужный элемент
            results.empty(); //очищаем элемент
            results.append("<legend>" + data[0].AthleteName + " results</legend>")
            var table = $("<table></table>").addClass("table table-striped table-hover");
            table.append("<thead></thead>").append("<tr><th>Place</th><th>Points</th><th>" 
                + "AthleteName</th><th>CompetitionTitle</th><th>CompetitionProgram</th></tr>")
            table.append("<tbody></tbody");
            for (var i = 0; i < data.length; i++) {

                var row = $("<tr></tr>");
                
                table.append(row);
                row.append("<td>" + data[i].Place + "</td>");
                row.append("<td>" + data[i].Points + "</td>");
                row.append("<td>" + data[i].AthleteName + "</td>");
                row.append("<td>" + data[i].CompetitionTitle + "</td>");
                row.append("<td>" + data[i].CompetitionProgram + "</td>");
            }
            results.append(table);
        }
    </script>


}